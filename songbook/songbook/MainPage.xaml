<Page 
    x:Class="songbook.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:songbook"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
            <StackPanel >
                <TextBox x:Name="SearchControl" FontFamily="Sneakerhead BTN Shadow"
                 Grid.Row="0" PlaceholderText="Search"
                 FontSize="26.667" Background="#FF898D78" Foreground="#FF0E0D0D" BorderBrush="#FFFF1111"  />

                <ListBox x:Name="ResultSearchControl"
                 Grid.Row="1" MaxHeight="200"
                 FontSize="26"
                 Visibility="Collapsed" Canvas.ZIndex="1000"     
                 >

                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock  Text="{Binding}"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        
        <local:SongTextControl x:Name="SongTextControl" Grid.Row="1"/>
    </Grid>

</Page>
